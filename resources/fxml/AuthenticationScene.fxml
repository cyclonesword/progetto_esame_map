<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.biblioteca.ui.controller.AuthenticationSceneController"
      prefHeight="300.0" prefWidth="250.0" spacing="10" alignment="CENTER">

    <VBox spacing="3" alignment="CENTER">
        <Label text="Matricola">
            <font>
                <Font name="AvenirLTStd-Medium" size="17.0"/>
            </font>
        </Label>
        <TextField fx:id="matricola" promptText="Matricola" maxWidth="160"/>
    </VBox>

    <VBox spacing="3" alignment="CENTER">
        <Label text="Password">
            <font>
                <Font name="AvenirLTStd-Medium" size="17.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwrord" maxWidth="160"/>
    </VBox>

    <VBox spacing="15" alignment="CENTER">
        <Button text="Login" maxWidth="80" maxHeight="40" onMouseClicked="#loginClicked" />
        <Button text="Registrati" maxWidth="80" maxHeight="40"/>
    </VBox>

</VBox>
