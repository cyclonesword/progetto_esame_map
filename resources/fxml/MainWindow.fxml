<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biblioteca.ui.controller.MainWindowController">

    <stylesheets>
        <URL value="@../css/main_window.css" />
    </stylesheets>

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" />
            </padding>
            <MenuBar>
                <Menu text="Aggiungi">
                    <MenuItem text="Nuovo libro" />
                    <MenuItem text="Nuovo utente" />
                </Menu>

                <Menu text="Cerca">
                    <MenuItem text="Libro" />
                    <MenuItem text="Utente" />
                </Menu>

                <Menu text="Visualizza">
                    <MenuItem text="Ultimi prestiti" />
                    <MenuItem text="Prestiti scaduti" />
                    <MenuItem text="Utenti registrati" />
                </Menu>

                <Menu text="?">
                    <MenuItem text="Cerca aggiornamenti" />
                    <MenuItem text="Help" />
                    <MenuItem text="About" />
                </Menu>
            </MenuBar>

            <HBox spacing="10">
                <padding>
                    <Insets left="10" />
                </padding>
                <Button prefHeight="40" text="Nuovo prestito">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/New24.gif" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button prefHeight="40" text="Nuova restituzione">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/PageSetup24.gif" />
                        </ImageView>
                    </graphic>
                </Button>

                <ToggleButton prefHeight="40" selected="true" text="Ultimi prestiti">
                    <graphic>
                        <ImageView>
                            <Image requestedHeight="24" requestedWidth="24" url="@../images/list.png" />
                        </ImageView>
                    </graphic>
                </ToggleButton>
            </HBox>
            <HBox id="border-bottom" maxHeight="1" minHeight="1">

            </HBox>
        </VBox>
    </top>

    <left>
        <StackPane alignment="TOP_RIGHT">

            <TreeView fx:id="filtersTreeView">
                <TreeItem expanded="true" value="Filters">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24">
                            <Image url="@../images/filter.png" />
                        </ImageView>
                    </graphic>
                    <children>
                        <TreeItem value="Categorie">
                            <graphic>
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../images/category.png" />
                                </ImageView>
                            </graphic>
                            <children>
                                <TreeItem value="Horror" />
                                <TreeItem value="Drammatico" />
                                <TreeItem value="Fantascienza" />
                            </children>
                        </TreeItem>

                        <TreeItem value="Autori">
                            <graphic>
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../images/authors.png" />
                                </ImageView>
                            </graphic>
                            <children>
                                <TreeItem value="Stephen King" />
                                <TreeItem value="Gabriele Fici" />
                                <TreeItem value="Domenico Aiello" />
                                <TreeItem value="Alba Marina D'Asaro" />
                            </children>
                        </TreeItem>

                        <TreeItem value="Editori">
                            <graphic>
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../images/publisher.png" />
                                </ImageView>
                            </graphic>
                            <children>
                                <TreeItem value="ACM Press" />
                                <TreeItem value="Pearson Learning" />
                                <TreeItem value="McGraw-Hill" />
                                <TreeItem value="Sellerio" />
                            </children>
                        </TreeItem>

                        <TreeItem value="Formato">
                            <graphic>
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../images/format.png" />
                                </ImageView>
                            </graphic>
                            <children>
                                <TreeItem value="Cartaceo" />
                                <TreeItem value="Audiolibro" />
                                <TreeItem value="PDF" />
                                <TreeItem value="ePub" />
                            </children>
                        </TreeItem>

                        <TreeItem value="Tag">
                            <graphic>
                                <ImageView fitHeight="24" fitWidth="24">
                                    <Image url="@../images/tag.png" />
                                </ImageView>
                            </graphic>
                            <children>
                                <TreeItem value="     New" />
                                <TreeItem value="     Cult" />
                                <TreeItem value="     2019 best read" />
                                <TreeItem value="     terrifying" />
                            </children>
                        </TreeItem>

                    </children>
                </TreeItem>

            </TreeView>

            <ImageView>
                <StackPane.margin>
                    <Insets bottom="5.0" right="10.0" top="10.0" />
                </StackPane.margin>
                <Image requestedHeight="20" requestedWidth="20" url="@../images/remove.png" />
            </ImageView>

        </StackPane>

    </left>

    <center>
        <ListView fx:id="listView">
        </ListView>
    </center>

    <right>

    </right>

    <bottom>

    </bottom>

</BorderPane>
