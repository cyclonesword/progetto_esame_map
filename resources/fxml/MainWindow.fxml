<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<BorderPane fx:id="rootPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biblioteca.ui.controller.MainWindowController">

    <stylesheets>
        <URL value="@../css/main_window.css" />
        <URL value="@../css/book_cell.css" />
    </stylesheets>

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" />
            </padding>
            <MenuBar>
                <Menu text="Aggiungi">
                    <MenuItem text="Nuovo libro" />
                    <MenuItem text="Nuovo utente" onAction="#addUserClicked"/>
                </Menu>

                <Menu text="Cerca">
                    <MenuItem text="Libro" />
                    <MenuItem text="Utente" />
                </Menu>

                <Menu text="Visualizza">
                    <MenuItem text="Ultimi prestiti" />
                    <MenuItem text="Prestiti scaduti" />
                    <MenuItem text="Utenti registrati" />
                </Menu>

                <Menu text="?">
                    <MenuItem text="Cerca aggiornamenti" />
                    <MenuItem text="Help" />
                    <MenuItem text="About" />
                </Menu>
            </MenuBar>

            <HBox spacing="10">
                <padding>
                    <Insets left="10" />
                </padding>
                <Button prefHeight="40" text="Nuovo prestito">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/New24.gif" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button prefHeight="40" text="Nuova restituzione">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/PageSetup24.gif" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button prefHeight="40" text="Visualizza prestiti" onMouseClicked="#showReservedBooksClicked">
                    <graphic>
                        <ImageView>
                            <Image requestedHeight="24" requestedWidth="24" url="@../images/list.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <HBox id="border-bottom" maxHeight="1" minHeight="1">

            </HBox>
        </VBox>
    </top>

    <left>
        <StackPane alignment="TOP_RIGHT" prefWidth="224">
            <BorderPane.margin>
                <Insets left="6" />
            </BorderPane.margin>
            <TreeView fx:id="filtersTreeView" styleClass="roundBorders" />
<!--            <ImageView>-->
<!--                <StackPane.margin>-->
<!--                    <Insets bottom="5.0" right="10.0" top="10.0" />-->
<!--                </StackPane.margin>-->
<!--                <Image requestedHeight="20" requestedWidth="20" url="@../images/remove.png" />-->
<!--            </ImageView>-->
        </StackPane>

    </left>

    <center>
        <VBox>
            <HBox>
                <TextField prefWidth="450" fx:id="searchBar" promptText="Cerca sul database..." onKeyReleased="#searchBarKeyReleased" styleClass="searchBar">
                    <HBox.margin>
                        <Insets bottom="5" left="5" right="8" />
                    </HBox.margin>

                </TextField>
                <Button fx:id="searchButton" onMouseClicked="#searchButtonClicked"  styleClass="searchBarButton" maxHeight="15" prefWidth="70" text="Search">
                    <HBox.margin>
                        <Insets right="5" />
                    </HBox.margin>
                </Button>
            </HBox>
            <ListView fx:id="listView" prefWidth="530" prefHeight="640" maxWidth="530" styleClass="roundBorders">
                <VBox.margin>
                    <Insets left="5" right="5" />
                </VBox.margin>
                <padding>
                    <Insets top="10" left="10" right="5" bottom="10" />
                </padding>
            </ListView>
        </VBox>
    </center>

    <right>

        <GridPane prefWidth="250.0" hgap="10" alignment="TOP_CENTER" styleClass="roundBorders">
            <BorderPane.margin>
                <Insets right="6" />
            </BorderPane.margin>
            <padding>
                <Insets top="10" />
            </padding>
            <ImageView fx:id="bookDetailImageView"
                       GridPane.halignment="CENTER"
                       fitWidth="150"
                       preserveRatio="true"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0"
                       GridPane.valignment="TOP"/>
            <Label fx:id="bookDetailTitle" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="15" bottom="10" />
                </GridPane.margin>
                <font>
                    <Font name="AvenirLTStd-Medium" size="17.0"/>
                </font>
            </Label>
            <Label fx:id="bookDetailDescription" GridPane.columnIndex="0" GridPane.rowIndex="2" wrapText="true"
                   GridPane.valignment="TOP" GridPane.halignment="CENTER" maxWidth="220" >
                <font>
                    <Font name="AvenirLTStd-Roman" size="14.0"/>
                </font>
            </Label>

            <ImageView fitWidth="14" fitHeight="14" fx:id="availabilityImage" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="LEFT">
                <GridPane.margin>
                    <Insets top="20" />
                </GridPane.margin>
            </ImageView>
            <Label fx:id="availabilityText"  GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="LEFT">
                <GridPane.margin>
                    <Insets left="25" top="20" />
                </GridPane.margin>
            </Label>

            <Button prefHeight="40" prefWidth="140" onMouseClicked="#reserveBookClicked" fx:id="prenotaButton" text="Avvia prestito" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="20" />
                </GridPane.margin>
                <padding>
                    <Insets left="13" right="20" />
                </padding>
                <graphic>
                    <ImageView>
                        <Image url="@../images/prenota.png" requestedWidth="21" requestedHeight="21"/>
                    </ImageView>
                </graphic>
            </Button>

            <HBox GridPane.rowIndex="5" GridPane.columnIndex="0" id="border-bottom" maxHeight="1" minHeight="1">
                <GridPane.margin>
                    <Insets top="10" left="30" right="30" />
                </GridPane.margin>
            </HBox>

            <Button prefHeight="40" prefWidth="140" onMouseClicked="#editBookClicked" fx:id="modificaButton" text="Modifica" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="10" />
                </GridPane.margin>
                <padding>
                    <Insets left="13" right="20" />
                </padding>
                <graphic>
                    <ImageView>
                        <Image url="@../images/edit.png" requestedWidth="21" requestedHeight="21"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button prefHeight="40" prefWidth="140" onMouseClicked="#deleteBookClicked" fx:id="eliminaButton" text="Elimina" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="5" />
                </GridPane.margin>
                <padding>
                    <Insets left="13" right="20" />
                </padding>
                <graphic>
                    <ImageView>
                        <Image url="@../images/delete.png" requestedWidth="21" requestedHeight="21"/>
                    </ImageView>
                </graphic>
            </Button>

        </GridPane>

    </right>

    <bottom>

    </bottom>

</BorderPane>


