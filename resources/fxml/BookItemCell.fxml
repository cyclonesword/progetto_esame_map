<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootNode" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <Label fx:id="itemNumberLabel" text="1" GridPane.rowSpan="2">
        <font>
            <Font name="AvenirLTStd-Book" size="26.0"/>
        </font>
    </Label>
    <ImageView fx:id="imageView" fitHeight="80" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="0"
               GridPane.rowSpan="2">
        <Image url="@../images/it.jpg"/>
    </ImageView>
    <Label fx:id="titleLabel" text="IT - Il Pagliaccio assassino" GridPane.columnIndex="2" GridPane.rowIndex="0">
        <font>
            <Font name="AvenirLTStd-Medium" size="18.0"/>
        </font>
    </Label>
    <Label fx:id="descriptionLabel" text="Una storia terrificante" GridPane.columnIndex="2" GridPane.rowIndex="1"
           GridPane.valignment="TOP">
        <font>
            <Font name="AvenirLTStd-Roman" size="15.0"/>
        </font>
    </Label>

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>


</GridPane>
